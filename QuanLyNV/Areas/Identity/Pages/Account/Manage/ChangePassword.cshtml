@page
@using QuanLyNV.Areas.Identity.Pages.Account.Manage;
@model ChangePasswordModel
@{
    ViewData["Title"] = "ĐỔI MẬT KHẨU";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ChangePasswordDto.OldPassword"></label>
                <input asp-for="ChangePasswordDto.OldPassword" class="form-control" />
                <span asp-validation-for="ChangePasswordDto.OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChangePasswordDto.NewPassword"></label>
                <input asp-for="ChangePasswordDto.NewPassword" class="form-control" />
                <span asp-validation-for="ChangePasswordDto.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChangePasswordDto.ConfirmPassword"></label>
                <input asp-for="ChangePasswordDto.ConfirmPassword" class="form-control" />
                <span asp-validation-for="ChangePasswordDto.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Cập nhật mật khẩu</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}