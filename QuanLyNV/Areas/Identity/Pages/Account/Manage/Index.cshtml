@page
@model IndexModel
@{
    ViewData["Title"] = "HỒ SƠ";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="userDto.Username"></label>
                <input asp-for="userDto.Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="userDto.PhoneNumber"></label>
                <input asp-for="userDto.PhoneNumber" class="form-control" />
                <span asp-validation-for="userDto.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="userDto.FullName"></label>
                <input asp-for="userDto.FullName" class="form-control" />
                <span asp-validation-for="userDto.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="userDto.Address"></label>
                <input asp-for="userDto.Address" class="form-control" />
                <span asp-validation-for="userDto.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="userDto.Birthday"></label>
                @Html.TextBoxFor(m => m.userDto.Birthday, "{0:dd/MM/yyyy}", new {@class = "form-control"})
                @* <input asp-for="Input.Birthday"  class="form-control" /> *@
                <span asp-validation-for="userDto.Birthday" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="userDto.Gender"></label><br />
                <label>Nam</label>
                @*value=Nam dc lưu vào database là Nam*@
                <input type="radio" asp-for="userDto.Gender" value="Nam" />
                <label>Nữ</label>
                @*value=Nữ dc lưu vào database là Nữ*@
                <input type="radio" asp-for="userDto.Gender" value="Nu" />
                <label>Giới tính khác</label>
                @*value=Nữ dc lưu vào database là Nữ*@
                <input type="radio" asp-for="userDto.Gender" value="Khác" />
                <td><span asp-validation-for="userDto.Gender" class="error"></span></td>
            </div>

            <button id="update-profile-button" type="submit" class="btn btn-danger">Lưu hồ sơ</button>
        </form>

      
    </div>
</div>

<!--OPTIONAL: Add the following scripts for enabling Client Side validation.-->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.js"></script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}