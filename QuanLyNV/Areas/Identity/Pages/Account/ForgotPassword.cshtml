@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Quyên mật khẩu?";
}

<h1>@ViewData["Title"]</h1>
<h4>Nhập email của tài khoản.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="emailDto.Email"></label>
                <input asp-for="emailDto.Email" class="form-control" />
                <span asp-validation-for="emailDto.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Gửi</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
